.clearfix
    display inline-block
    &::after
        content ''
        display block
        height 0
        line-height 0
        clear both/*清除所有的脱离文档流*/
        visibility hidden/*不可见但会占位*/
    &::before
        content ''
        display block
        height 0
        line-height 0
        clear both/*清除所有的脱离文档流*/
        visibility hidden/*不可见但会占位*/
    
.df-jsb-ac
